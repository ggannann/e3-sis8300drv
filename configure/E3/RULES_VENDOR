# One should define the any dependency modules and EPICS base path
# in the following directory

.PHONY: epics epics-clean

E3_VENDOR_SRC_PATH:=$(E3_MODULE_SRC_PATH)/src/main/c
E3_TOOLS_SRC_PATH:=$(E3_VENDOR_SRC_PATH)/tools
TOOLS_MAKEFILE:=tools.Makefile

tools: tools-conf
	$(SUDOBASH) "$(MAKE) -C $(E3_TOOLS_SRC_PATH) -f $(TOOLS_MAKEFILE)"

tools-conf:
	@echo ""
	install -m 644 $(TOP)/$(TOOLS_MAKEFILE)  $(E3_TOOLS_SRC_PATH)/
	@echo ""
	
tools-clean: tools-conf
	$(SUDOBASH) "$(MAKE) -C $(E3_TOOLS_SRC_PATH)  -f $(TOOLS_MAKEFILE) clean"


vendor:
	$(SUDOBASH) "$(MAKE) -C $(E3_VENDOR_SRC_PATH)"
	
vendor-clean:
	$(SUDOBASH) "$(MAKE) -C $(E3_VENDOR_SRC_PATH) clean"




.PHONY: tools-conf tools vendor vendor-clean